{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@shared-types/*": ["../shared-types/*", "./shared-types/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "../shared-types/**/*"],
  "exclude": ["node_modules", "dist"]
}
